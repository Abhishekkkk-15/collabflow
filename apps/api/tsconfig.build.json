{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@collabflow/db": ["../../packages/db"],
      "@collabflow/types": ["../../packages/types"]
    },

    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2020",

    "outDir": "dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },

  "include": ["src"]
}
