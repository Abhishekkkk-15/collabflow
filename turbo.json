{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"],
      "env": [
        "DATABASE_URL",
        "NEXTAUTH_URL",
        "NEXTAUTH_SECRET",
        "GOOGLE_CLIENT_ID",
        "GOOGLE_CLIENT_SECRET",
        "AUTH_URL",
        "AUTH_TRUST_HOST",
        "RESEND_API_KEY",
        "EMAIL_FROM",
        "GITHUB_ID",
        "GITHUB_SECRET"
      ]
    },
    "dev": {
      "cache": false
    },
    "lint": {}
  }
}
